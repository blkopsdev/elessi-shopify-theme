{%- include 'style_mp_section' -%}
<div class="nt_custom_{{section.id}} nt-banner-video nt-banner-parallax bg_overlay_{{section.settings.overlay}} {%- if section.settings.full_height %} nt-full-height{%- endif %} nt_video-bg-container{%- if section.settings.image != blank %} lazyload{%- endif -%}" data-gl-parallax-image="{{ section.settings.video_url }}" data-gl-video-bg="{{ section.settings.video_url }}"{%- if section.settings.image != blank or section.settings.section_bg_color != blank %} data-bgset="{%- include 'bgset', image: section.settings.image -%}" data-sizes="auto" data-parent-fit="cover"{%- endif -%}>
   <div class="div_overlay"></div>
   <div class="container clearfix nt-z-index_44">
      <div class="row">
         <div class="col-12 tc">
            {%- case section.settings.style_text -%}
               {%- when '1' -%}
                  {%- if section.settings.title != blank -%}<h3 class="mt__20 fs__18 lh__1 f__libre tc cw">{{ section.settings.title }}</h3>{%- endif -%}
                  {%- if section.settings.title_last != blank -%}<h2 class="tu fs__60 mt__20 mb__20 fwbex lh__1 cw tc">{{ section.settings.title_last }}</h2>{%- endif -%}
                  {%- if section.settings.link != blank and section.settings.button != blank -%}<a class="fwb button button-o-w button_before cw mb__20" href="{{section.settings.link}}" target="_blank">{{section.settings.button}}</a>{%- endif -%}
               {%- else -%}
                  {%- if section.settings.title != blank -%}<h2 class="mt__20 tu fs__60 fwbex cw tc lh__1">{{ section.settings.title }}</h2>{%- endif -%}
                  {%- if section.settings.title_last != blank -%}<h3 class="fs__18 f__libre tc cw mt__20 mb__20 lh__1">{{ section.settings.title_last }}</h3>{%- endif -%}
                  {%- if section.settings.link != blank and section.settings.button != blank -%}<a class="button button-o-w button_before cw mb__20" href="{{section.settings.link}}" target="_blank">{{section.settings.button}}</a>{%- endif -%}
            {%- endcase -%}
         </div>
      </div>
   </div>
</div>

