                  {% for article in blogs[blog.handle].articles limit:featured_posts_limit_all %}
                     <li>
                        <a href="{{ article.url }}" title="{{ article.title }}">
                           {%- assign image_0 = article.image -%}
                        {%- if image_0 != blank -%}
                        <img src="{{ image_0 | img_url: image_size}}" srcset="{{ image_0 | img_url: image_size }} 1x, {{ image_0 | img_url: image_size, scale: 2 }} 2x" class="w__100 attachment-shop_catalog size-shop_catalog sp-post-image" alt="{{image_0.alt | escape }}">    
                        {%- endif -%}
                        </a>
                        <div class="pr_w_infors">
                           <div class="product-title"><a href="{{ article.url }}">{{ article.title }}</a></div>
                           <span class="price db mt__5">{{ article.published_at | date: format: 'month_day_year' }} </span>
                        </div>
                     </li>
                  {%- endfor -%}
               </ul>
			   </aside>
			   {%- elsif template == "article" and blogs[blog.handle].articles_count > 1 -%}
				  <aside id="recent-posts-{{ block.id }}" class="widget widget_products mb__30 widget_recent_entries">
				     <h4 class="pr tu widget-title fwsb fs__16 mb__25">{{ block.settings.title }}</h4>
				     <ul class="product_list_widget">
                 {% for f_article in blogs[blog.handle].articles limit:featured_posts_limit_all %}
                     {%- if article.id != f_article.id -%}
                     <li>
                        <a href="{{ f_article.url }}" title="{{ f_article.title }}">
                           {%- assign image_0 = f_article.image -%}
                        {%- if image_0 != blank -%}
                        <img src="{{ image_0 | img_url: image_size}}" srcset="{{ image_0 | img_url: image_size }} 1x, {{ image_0 | img_url: image_size, scale: 2 }} 2x" class="w__100 attachment-shop_catalog size-shop_catalog sp-post-image" alt="{{image_0.alt | escape }}">    
                        {%- endif -%}
                        </a>
                        <div class="pr_w_infors">
                           <div class="product-title"><a href="{{ f_article.url }}">{{ f_article.title }}</a></div>
                           <span class="price db mt__5">{{ f_article.published_at | date: format: 'month_day_year' }} </span>
                        </div>
                     </li>
                     {%- endif -%}
                  {%- endfor -%}
				     </ul>
				  </aside>
				{%- endif -%}
	   {%- endcase -%}
	{%- endfor -%}
{%- else -%}
<div class="text-center">{%- include 'no-blocks'-%}</div>   
{%- endif -%}
</div>
