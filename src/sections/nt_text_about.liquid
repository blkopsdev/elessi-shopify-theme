{%- include 'style_mp_section' -%}
  <div class="row nt_custom_{{section.id}}">
    <div class="col-md-1 col-12"></div>
    <div class="col-md-10 col-12">
      <h1 class="fs__50 tc">{{section.settings.title}}</h1>
      <p class="fs__16 tc">{{section.settings.sub_title}}</p>
      <div class="tc">
        {%- if section.settings.social_enabled -%}
        {%- if section.settings.share_contact == '1' -%} {%- assign gl_follow_social = false -%} {%- else -%} {%- assign gl_follow_social = true -%} {%- endif -%}
        {%- include 'social-sharing', gl_design:'colored tc',gl_size:'medium', follow_social:gl_follow_social,nt_tooltip:true -%}
        {%- endif -%}
      </div>
    </div>
    <div class="col-md-1 col-12"></div>
  </div>
