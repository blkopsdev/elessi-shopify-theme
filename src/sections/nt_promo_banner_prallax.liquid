{%- include 'style_mp_section' -%}
<div class="nt_custom_{{section.id}} nt-banner-parallax bg_overlay_{{section.settings.overlay}}{%- if section.settings.use_parallax %} ntparallax{%- endif %}{%- if section.settings.image != blank %} lazyload nt_bg_lz lazypreload{%- endif %}{%- if section.settings.full_height %} nt-full-height{%- endif -%}"{%- if section.settings.image != blank %} data-bgset="{%- include 'bgset', image: section.settings.image -%}" data-sizes="auto" data-parent-fit="cover"{%- endif %}>
   <div class="div_overlay"></div>
   <div class="container clearfix nt-z-index_44">
      <div class="row">
         <div class="col-12 tc">
                  {%- if section.settings.title != blank -%}<h3 class="title_1 mt__20 fs__18 lh__1 f__libre tc cw">{{ section.settings.title }}</h3>{%- endif -%}
                  {%- if section.settings.title_last != blank -%}<h2 class="title_2 tu fs__60 mt__20 mb__20 fwbex lh__1 cw tc">{{ section.settings.title_last }}</h2>{%- endif -%}
                  {%- if section.settings.link != blank and section.settings.button != blank -%}<a class="fwb button button-o-w cw mb__20" href="{{section.settings.link}}" target="_blank">{{section.settings.button}}</a>{%- endif -%}
         </div>
      </div>
   </div>
</div>
<style>
{%- if section.settings.font_title != blank -%}
  {%- assign header_font = section.settings.font_title -%}
  {{ header_font | font_face }}
{%- endif -%}
{%- if section.settings.font_title_2 != blank -%}
  {%- assign base_font = section.settings.font_title_2 -%}
  {{ base_font | font_face }}
{%- endif -%}
{%- if section.settings.font_title_3 != blank -%}
  {%- assign btn_font = section.settings.font_title_3 -%}
  {{ btn_font | font_face }}
{%- endif -%}
.nt_custom_{{section.id}} .title_1{
  font-size:{{section.settings.size_text_1}}px;
{%- if section.settings.font_title_2 != blank -%}
  font-family: {{ header_font.family }}, {{ header_font.fallback_families }};
  font-style: {{ header_font.style }};
  font-weight: {{ header_font.style }};
{%- endif -%}
}
.nt_custom_{{section.id}} .title_2{
  font-size:{{section.settings.size_text_2}}px;
{%- if section.settings.font_title_2 != blank -%}
  font-family: {{ base_font.family }}, {{ base_font.fallback_families }};
  font-style: {{ base_font.style }};
  font-weight: {{ base_font.style }};
{%- endif -%}
}
.nt_custom_{{section.id}} .button-o-w{
  font-size:{{section.settings.size_text_3}}px;
{%- if section.settings.font_title_3 != blank -%}
  font-family: {{ btn_font.family }}, {{ btn_font.fallback_families }};
  font-style: {{ btn_font.style }};
  font-weight: {{ btn_font.style }};
{%- endif -%}
}
@media (max-width: 767px) {
.nt_custom_{{section.id}} .title_1{
  font-size:{{section.settings.size_text_1_mb}}px
}
.nt_custom_{{section.id}} .title_2{
  font-size:{{section.settings.size_text_2_mb}}px
}
.nt_custom_{{section.id}} .button-o-w{
  font-size:{{section.settings.size_text_3_mb}}px
}
}
</style>
