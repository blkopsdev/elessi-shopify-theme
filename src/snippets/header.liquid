<header class="header_section design-header-{{settings.header_design}}">
   {%- assign check_curency_lang = false -%}
   {%- if settings.show_multiple_currencies %}
      {%- assign check_curency_lang = true -%}
   {%- elsif settings.show_language_currencies and settings.language_link_list != blank -%}
      {%- assign check_curency_lang = true -%}
   {%- endif -%}
   {%- if settings.enable_header_banner -%}
   <div class="announcement_bar pr w_100 color-scheme-{{settings.header_banner_color}}{%- if settings.header_banner_bg_image != blank %} nt_bg_lz lazyload{%- endif -%}"{%- if settings.header_banner_bg_image != blank %} data-bgset="{%- include 'bgset', image: settings.header_banner_bg_image -%}" data-sizes="auto" data-parent-fit="cover"{%- endif -%}>
     {%- if settings.close_banner_btn -%}<div class="close_an_bar pa tc cusor_pointer"><svg aria-hidden="true" focusable="false" role="presentation" class="icon icon-close" viewBox="0 0 16.8 16.8"><path fill="#fff" d="M16.8 1.5L15.4.1 8.4 7l-7-7L0 1.4l7 7-7 7 1.4 1.4 7-7 7 7 1.4-1.4-7-7z"></path></svg></div>{%- endif -%}
     <a href="{{settings.link_banner}}" class="announcement_bar_link tc fs__16 w_100">
        <div class="container">
           {%- if settings.banner_content contains '[countdown]' -%}
           {{settings.banner_content | split:'[countdown]' | first}} <div class="dib nt-countdown-simple" data-time="{{settings.data_countdown}}"><div class="dib op_0"><div class="dib"><span class="dib cw fs__13">16</span> <span class="dib tu fs__13">days</span></div>, <div class="dib"><span class="dib cw fs__13">00</span><span class="dib">: </span></div><div class="dib"><span class="dib cw fs__13">28</span><span class="dib">: </span></div><div class="dib"><span class="dib cw fs__13">09</span></div></div></div> {{settings.bar_message_text | split:'[countdown]' | last}}
           {%- else -%}
           {{settings.banner_content}}
           {%- endif -%}
        </div>
     </a>
   </div>
   {%- endif -%}
   {%- if settings.top_bar_enable -%}
   <div class="header_top color-scheme-{{settings.top_bar_color}}{%- if settings.top_bar_bg_image != blank %} nt_bg_lz lazyload{%- endif -%}"{%- if settings.top_bar_bg_image != blank %} data-bgset="{%- include 'bgset', image: settings.top_bar_bg_image -%}" data-sizes="auto" data-parent-fit="cover"{%- endif -%}>
      <div class="container">
         <div class="header_top_content">
            <div class="header_top_left{%- if check_curency_lang == false %} text-center{%- endif -%}">
              {%- if settings.top_bar_text contains '[social_buttons' -%}{%- if settings.top_bar_text contains 'social_buttons_share' -%}{%- assign gl_follow_social = false -%}{%- else -%}{%- assign gl_follow_social = true -%}{%- endif -%}{%- include 'social-sharing', gl_size:'icons-size-small', follow_social:gl_follow_social -%} {{settings.top_bar_text | remove:'[social_buttons_share]' | remove:'[social_buttons_follow]' | strip_newlines }}{%-else-%}{{settings.top_bar_text}}{%- endif -%} 
            </div>
            {%- if check_curency_lang %}
            <div class="header_top_right">
               <ul id="header_top_bar" class="menu">
                  {%- if settings.show_language_currencies and settings.language_link_list != blank -%}{%- include 'preview_lang' -%}
                  {%- endif -%}
                  {%- if settings.show_multiple_currencies %}{%- include 'currency-picker' -%}{%- endif -%}
               </ul>
            </div>
            {%- endif -%}
         </div>
      </div>
   </div>
   {%- endif -%}
   <div class="site_header design-header-{{settings.header_design}} header_icons_{{settings.header_icon_style}} color-scheme-{{settings.header_color_scheme}}{%- if settings.header_bg_image != blank %} nt_bg_lz lazyload{%- endif -%}"{%- if settings.header_bg_image != blank %} data-bgset="{%- include 'bgset', image: settings.header_bg_image -%}" data-sizes="auto" data-parent-fit="cover"{%- endif -%}>
      {%- assign name_el_header = 'header_' | append:settings.header_design -%}
      {%- include name_el_header -%}
      <div class="nt_overlay_header"></div>
   </div>
</header>
<div class="clear"></div>