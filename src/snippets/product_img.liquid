{%- assign position_img_1 = 0 -%}
{%- assign position_img_2 = 1 -%}
{%- assign hide_img_2 = false -%}
{%- assign images_size = product.images.size -%}
{%- if settings_pr_img_size and images_size > 0 -%}
   <div data-chksrc="{{ product.images[position_img_1] | img_url: '50x50' }}" class="main-img nt_img_ratio nt-product-img-element nt-pr-image-link lazyload nt_bg_lz" data-bgset="{%- include 'bgset', image: product.images[position_img_1] -%}" data-sizes="auto" data-parent-fit="cover"></div>
   {%- if settings.show_pr_img_2 and images_size > 1 and hide_img_2 == false -%}
   <div class="back-img pa lazyload lazypreload nt_bg_lz" data-bgset="{%- include 'bgset', image: product.images[position_img_2] -%}" data-sizes="auto" data-parent-fit="cover"></div> 
   {%- endif -%} 
{%- elsif images_size > 0 -%}
   <div class="main-img">
      {%- assign img_url = product.images[position_img_1] | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
      <img src="{{ product.images[position_img_1] | img_url: '50x50' }}" data-chksrc="{{ product.images[position_img_1] | img_url: '50x50' }}" data-src="{{ img_url }}" data-widths="[180, 360, 540, 720, 900, 1080, 1296, 1512, 1728, 2048]" data-aspectratio="{{ product.images[position_img_1].aspect_ratio }}" data-sizes="auto" class="lazyload attachment-shop_catalog size-shop_catalog" alt="{{product.images[position_img_1].alt}}">
      <div class="nt-wrap-lazy"></div>
   </div>
   {%- if settings.show_pr_img_2 and images_size > 1 and hide_img_2 == false -%}
   <div class="back-img pa">
         {%- assign img_url = product.images[position_img_2] | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
         <img src="{{ product.images[position_img_2] | img_url: '50x50' }}" data-src="{{ img_url }}" data-widths="[180, 360, 540, 720, 900, 1080, 1296, 1512, 1728, 2048]" data-aspectratio="{{ product.images[position_img_2].aspect_ratio }}"  data-sizes="auto" class="lazyload lazypreload attachment-shop_catalog size-shop_catalog" alt="{{product.images[position_img_2].alt}}">       
         <div class="nt-wrap-lazy"></div>
   </div>
   {%- endif -%}   
{%- endif -%}
 

