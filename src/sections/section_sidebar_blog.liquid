              <h4 class="pr tu widget-title fwsb fs__16 mb__25">{{ block.settings.title }}</h4>
              <div class="tagcloud entry-content">
               {%- for tag in blog.all_tags -%}
                  {% if current_tags contains tag %}
                     <a class="chosen" href="/blogs/{{blog.handle}}">{{ tag }}{%- if block.settings.count %} ({{ tag.total_count }}){%- endif -%}</a>
                  {% else %}
                     <a href="/blogs/{{blog.handle}}/tagged/{{ tag | handleize }}">{{ tag }}{%- if block.settings.count %} ({{ tag.total_count }}){%- endif -%}</a>
                  {% endif %}
               {%- endfor -%}
              </div>
